<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical">

    <TextView
            android:id="@+id/txt_name"
            tools:text="Character Name"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/txt_birth_date"
            android:layout_marginStart="28dp" android:layout_marginBottom="21dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_birth_date"/>

    <TextView
            android:id="@+id/txt_born"
            android:text="born:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="110dp" android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/txt_died"
            android:text="died:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_name" app:layout_constraintEnd_toStartOf="@+id/txt_death_day"
            android:layout_marginEnd="18dp"/>

    <TextView
            android:id="@+id/txt_birth_date"
            tools:text="12/01/875"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_born" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/txt_born"/>

    <TextView
            android:id="@+id/txt_death_date"
            tools:text="19/10/951"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_died"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/txt_played_by"
            tools:text="played by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="268dp" android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>
